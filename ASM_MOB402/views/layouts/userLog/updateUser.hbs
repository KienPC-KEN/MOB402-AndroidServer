<div class="col-sm-9 bg-light mt-4 mx-4">
    <h4 class="text-uppercase p-3 mt-4 text-center">Sửa người dùng</h4>
    <p class="px-3 ">Vui lòng điền vào form</p>
    {{#if check}}
    <div class="text-center">
        <span style="color: red">{{check}}</span>
    </div>
    {{/if}}
    <hr class="mx-2">

    <form action="/user/updateUserLog" method="post">
        {{#each arr}}
        <div class="form-floating mb-3 mt-3">
            <input type="number" disabled class="form-control" id="id" placeholder="Enter id" name="id"
                value="{{this.stt}}">
            <label for="id">Id</label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input type="text" class="form-control" id="name" placeholder="Enter name" name="name"
                value="{{this.name}}">
            <label for="name">Name</label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email"
                value="{{this.email}}">
            <label for="email">Email</label>
        </div>
        <div class="form-floating mt-3 mb-3">
            <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="pass"
                value="{{this.password}}">
            <label for="exampleInputPassword1">Password</label>
        </div>
        <div class="form-floating mt-3 mb-3">
            <input type="text" class="form-control" id="pwd" placeholder="Enter password" name="rePass"
                value="{{this.password}}">
            <label for="exampleInputPassword1">Nhập Lại Password</label>
        </div>
        <div class="form-floating mb-3 mt-3">
            <!--   PHOTO-->
            <input onchange="loadImage(event)" type="file" name="myImage" accept="image/*" />
            <img src="{{this.avatar}}" id="image" alt="Lỗi" style="width: 50px; height: 50px;">
            <script>
                var loadImage = function (event) {
                    var img = document.getElementById("image");
                    img.src = URL.createObjectURL(event.target.files[0]);
                };
            </script>
        </div>
        {{!-- select item phân quyền user --}}
        <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupSelect01">Chức vụ tài khoản</label>
            <select class="form-select" name="selectPQUser">
                <option value="{{this.pq}}">{{this.pq}}</option>
            </select>
            <label class="input-group-text" for="inputGroupSelect01">Không thể thay đổi chức vụ ở đây</label>
        </div>
        <div class="d-grid gap-2">
            <button class="btn btn-primary" type="submit">Sửa</button>
        </div>
        {{/each}}
    </form>

</div>