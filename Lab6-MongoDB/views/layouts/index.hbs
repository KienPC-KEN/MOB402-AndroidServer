<body class="container" style="background-color: gainsboro; ">
    <div class="container" style="background-color: gainsboro; width: 700px;">
        <div class="border border-3 border-white mt-4 bg-white" id="">

            <form class="row p-3" method="POST" action="/add">
                <div class="mb-3">
                    <label class="form-label">Tiêu đề</label>
                    <input type="text" class="form-control" name="txtTieuDe">
                </div>
                <div class="mb-3">
                    <label class="form-label">Năm sáng tác</label>
                    <input type="text" class="form-control" name="txtNam" >
                </div>
                <div class="mb-3">
                    <label class="form-label">Tác giả</label>
                    <input type="text" class="form-control" name="txtTacGia">
                </div>

                <button type="submit" class="btn btn-primary">Thêm</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
